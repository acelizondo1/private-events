<% interval = 0 %>
<% if !events.empty? %>
    <div class="tile is-ancestor">
        <div class="tile is-parent is-vertical">
        <% events.each do |event| %>
        <% if interval === 0 %>
            <div class="tile centered-text is-parent m-5">
        <% end %>
                <div class="tile centered-text is-parent box m-2 is-6">
                    <div class="tile is-parent is-vertical is-6">
                        <div class="tile is-size-5 pt-6">
                            <%= link_to event.name, event, class: "has-text-weight-bold" %>
                        </div>
                        <% if tab === "created" %>
                        <div class="tile">
                            <%= link_to "Edit", edit_event_path(event) %>
                            |
                            <%= link_to "Delete", event, method: :delete, data: { confirm: "Are you sure?" } %>
                        </div>
                        <% end %>
                    </div>
                    <div class="tile is-parent is-6 is-vertical">
                        <div class="tile is-child">
                            <h5 class="is-size-6">
                                Location:
                            </h5>
                            <p>
                                <%= event.location %>
                            </p>
                        </div>
                        <div class="tile is-child">
                                <h5 class="is-size-6">
                                    Date of Event:
                                </h5>
                                <p>
                                    <%= event.date.strftime("%B %dth, %Y") %>
                                </p>
                        </div>
                    </div>
                </div>
            <% if interval === 1 %>
                </div>
                <% interval = 0 %>
            <% else %>
                <% interval += 1 %>
            <% end %>
        <% end %>
        <% if events.size < 2 %>
            </div>
        <% end %>
        </div>
    </div>
<% else %>
    <div>
        <p class="is-size-5"><%= empty_message %></p>
    </div>
<% end %>