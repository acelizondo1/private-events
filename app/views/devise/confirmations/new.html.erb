<div class="column is-6 is-offset-3 centered-text">
  <div class ="is-size-2">Resend confirmation instructions</div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <div class="field">
      <%= f.label :email, class:"label" %>
      <p class="control has-icons-left">
        <%= f.email_field :email, autocomplete: "email", class:"input", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
      </p>
    </div>

    <div class="actions">
      <%= f.submit "Resend confirmation instructions", class:"button is-info" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>