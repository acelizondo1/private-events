<div class="mt-4">
    <% if !@events.empty?%>
        <div class="tile is-ancestor">
            <div class="tile is-parent is-vertical">
            <% @events.each do |event| %>
            <% if @interval === 0%>
                <div class="tile centered-text is-parent m-5">
            <% end %>
                    <div class="tile centered-text is-parent box m-2 is-4">
                        <div class="tile is-child is-6">
                            <div class="tile is-size-5 pt-6">
                                <div class="has-text-weight-bold"><%= event.name %></div>
                            </div>
                        </div>
                        <div class="tile is-parent is-6 is-vertical">
                            <div class="tile is-child">
                                <h5 class="is-size-6">
                                    Location:
                                </h5>
                                <p>
                                    <%= event.location %>
                                </p>
                            </div>
                            <div class="tile is-child">
                                    <h5 class="is-size-6">
                                        Date of Event:
                                    </h5>
                                    <p>
                                        <%= event.date.strftime("%B %dth, %Y") %>
                                    </p>
                            </div>
                        </div>
                    </div>
                <% if @interval === 2 %>
                    </div>
                    <% @interval = 0 %>
                <% else %>
                    <% @interval += 1%>
                <% end %>
            <% end %>
        </div>
    <% else %>
        <div>
            <p class="is-size-5">There are no events!</p>
        </div>
    <% end %>
    </div>
</div>