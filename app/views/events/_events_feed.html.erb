<div class="mt-4">
    <% if !events.empty?%>
        <div class="tile is-ancestor">
            <div class="tile is-parent is-vertical">
            <% events.each do |event| %>
            <% if interval === 0%>
                <div class="tile centered-text is-parent m-5">
            <% end %>
                    <div class="tile centered-text is-parent box m-2 is-4">
                        <div class="tile is-parent is-vertical is-6">
                            <div class="tile is-size-5 pt-4 has-text-weight-bold">
                                <%= event.name %>
                                <% link_to event.name, event, class: "has-text-weight-bold"%>
                            </div>
                            <div class="tile">
                                <%= link_to "Learn More", event, class: "button is-light is-small"%>
                            </div>
                        </div>
                        <div class="tile is-parent is-6 is-vertical">
                            <div class="tile is-child">
                                <span clas="icon-text">
                                    <span class="icon">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </span>
                                    <span>
                                        <%= event.location %>
                                    </span>
                                </span>
                            </div>
                            <div class="tile is-child">
                                <span class=icon-text>
                                    <span class="icon">
                                        <i class="fas fa-calendar-alt"></i>
                                    </span>
                                    <span>
                                        <%= event.date.strftime("%B %d, %Y") %>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                <% if interval === 2 %>
                    </div>
                    <% interval = 0 %>
                <% else %>
                    <% interval += 1 %>
                <% end %>
            <% end %>
            <% if events.size.to_i%3 != 0 %>
                </div>
            <% end %>
        </div>
    <% else %>
        <div>
            <p class="is-size-5">No Events Found!</p>
        </div>
    <% end %>
    </div>
</div>